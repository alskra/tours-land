// Mobile footer
.footer-mob {
  padding-top: 40px;
  padding-bottom: 25px;
  text-align: center;
  background-color: #fbfafa;
}
.footer-mob__info {
  margin-bottom: 30px;
  padding-right: 20px;
  padding-left: 20px;
  font-size: 13px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  @media (min-width $screen-sm-min) {
    font-size: 16px;
  }
}
.footer-mob__awards {
  margin-bottom: 25px;
}
.footer-mob__awards::before,
.footer-mob__awards:after {
  content: "";
  display: table;
}
.footer-mob__awards:after {
  clear: both;
}
.footer-mob__item {
  float: left;
  width: 50%;
  height: 210px;
  padding: 20px;
  border-right: 1px solid #e9e7e7;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  &:nth-child(1), &:nth-child(2) {
    border-bottom: 1px solid #e9e7e7;
  }
  @media (min-width $screen-md-min) {
    width: 25%;
    height: 180px;
    &:nth-child(1), &:nth-child(2) {
      border-bottom: 0;
    }
  }
}
.footer-mob__item:last-child {
  border-right: 0;
}
.footer-mob__item__img {
  height: 58px;
  margin-bottom: 20px;
}
.footer-mob__item__img img {
  max-height: 100%;
}
.footer-mob__create span {
  display: block;
  color: #000;
  font-size: 13px;
  @media (min-width $screen-sm-min) {
    font-size: 18px;
  }
}
.footer-mob__create .glyphicon {
  display block
  text-align center
  font-size 11px
  line-height 1em
  margin 2px 0 5px
}
.footer-mob__item__tx {
  font-size: 11px;
  @media (min-width $screen-sm-min) {
    font-size: 16px;
  }
}

